        <item name="colorSecondaryContainer">@color/secondary_container_color_sunMoon</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_color_sunMoon</item>
        <item name="colorSurface">@color/surface_color_sunMoon</item>
        <item name="colorOnSurface">@color/on_surface_color_sunMoon</item>
        <item name="backgroundColor">@color/background_color_sunMoon</item>
        <item name="colorOnBackground">@color/on_background_color_sunMoon</item>
