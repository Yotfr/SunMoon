<?xml version="1.0" encoding="utf-8"?>
<resources>

    //Toolbar
    <style name="ThemeOverlay.SunMoon.Toolbar" parent="">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
    </style>

    <style name="Widget.SunMoon.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.SunMoon.TitleLarge</item>
    </style>

    //FAB
    <style name="Widget.SunMoon.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.SunMoon.FloatingActionButton" parent="">
        <item name="colorContainer">?attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorOnPrimary</item>
    </style>

    //IconButton
    <style name="Widget.SunMoon.Button.IconButton" parent="Widget.Material3.Button.IconButton" />

    //IconButtonFilled
    <style name="Widget.SunMoon.Button.IconButton.Filled" parent="Widget.Material3.Button.IconButton.Filled">

        <item name="android:minWidth">24dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="iconSize">24dp</item>

        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.IconButton.Filled</item>
        <item name="backgroundTint">@color/icon_button_selector</item>
        <item name="iconTint">?attr/colorSurface</item>
    </style>



    //TextButton
    <style name="Widget.SunMoon.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.SunMoon.LabelLarge</item>
    </style>

    //OutlinedButton
    <style name="Widget.SunMoon.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.SunMoon.LabelLarge</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.LargeComponent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    //OutlinedButtonSecondary
    <style name="Widget.SunMoon.Button.OutlinedButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.SunMoon.LabelLarge</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.LargeComponent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    //OutlinedCard
    <style name="Widget.SunMoon.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.LargeComponent</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ThemeOverlay.SunMoon.Card" parent="">
        <item name="colorOutline">?attr/colorSecondary</item>
    </style>


    //TabLayout
    <style name="Widget.SunMoon.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.SunMoon.TitleMedium</item>
    </style>


    //BottomSheet
    <style name="ThemeOverlay.SunMoon.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.BottomSheet</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.BottomSheet</item>
    </style>

    <style name="ThemeOverlay.SunMoon.BottomSheet" parent="">
        <item name="colorSurface">?attr/colorSurface</item>
    </style>

    //TextField
    <style name="Widget.SunMoon.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.TextInputLayout</item>
        <item name= "boxStrokeWidth">2dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.LargeComponent</item>
    </style>

    <style name="ThemeOverlay.SunMoon.TextInputLayout" parent="">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.SunMoon.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.SunMoon.BodySmall</item>
        <item name="editTextStyle">@style/Widget.SunMoon.TextInputEditText.OutlinedBox</item>
        <item name="colorOnSurfaceVariant">?attr/colorSecondary</item>
        <item name="colorOutline">?attr/colorSecondary</item>
    </style>

    <style name="Widget.SunMoon.TextInputEditText.OutlinedBox" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    //SuggestionChip
    <style name="Widget.SunMoon.Chip.Suggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.Chip.Suggestion</item>
        <item name="android:textAppearance">@style/TextAppearance.SunMoon.BodyMedium</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.LargeComponent</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:backgroundTint">@color/chip_background_color</item>
    </style>

    <style name="ThemeOverlay.SunMoon.Chip.Suggestion" parent="">
        <item name="colorOnSurfaceVariant">?attr/colorSecondary</item>
        <item name="colorOutline">?attr/colorSecondary</item>
    </style>

    //CalendarView
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">?attr/colorPrimaryContainer</item>
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    //NavigationDrawer
    <style name="Widget.SunMoon.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.NavigationView</item>
    </style>

    <style name="ThemeOverlay.SunMoon.NavigationView" parent="">
        <item name="colorSecondaryContainer">?attr/colorPrimaryContainer</item>
        <item name="colorOnSecondaryContainer">?attr/colorSurface</item>
        <item name="colorOnSurfaceVariant">?attr/colorPrimary</item>
    </style>

    //EditText
    <style name="Theme.SunMoon.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textCursorDrawable">?attr/colorSecondary</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textAppearance">@style/TextAppearance.SunMoon.BodyLarge</item>
    </style>

    //Dialogs
    <style name="ThemeOverlay.SunMoon.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnSurfaceVariant">?attr/colorSecondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.SunMoon.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.SunMoon.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.SunMoon.Button</item>
    </style>

    <style name="MaterialAlertDialog.SunMoon" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.SunMoon.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.SunMoon.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.SunMoon.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    //DatePicker
    <style name="ThemeOverlay.SunMoon.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorPrimary</item>
    </style>

    //Snackbar
    <style name="Widget.SunMoon.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SunMoon.Snackbar</item>
    </style>

    <style name="Widget.SunMoon.SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <style name="ThemeOverlay.SunMoon.Snackbar" parent="">
        <item name="colorSurfaceInverse">?attr/colorPrimary</item>
        <item name="colorOnSurfaceInverse">?attr/colorSurface</item>
        <item name="colorPrimaryInverse">?attr/colorSurface</item>
    </style>









    //TextAppearance
    <style name="TextAppearance.SunMoon.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.BodyMedium.Calendar" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">@color/primary_color_sunMoon</item>
    </style>

    <style name="TextAppearance.SunMoon.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="TextAppearance.SunMoon.BodySmall.Calendar" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">@color/primary_color_sunMoon</item>
    </style>

    <style name="TextAppearance.SunMoon.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/alata</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>


    //ShapeAppearance
    <style name="ShapeAppearance.SunMoon.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.SunMoon.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.SunMoon.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.SunMoon.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>


