<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scheduled_footer"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/losyash"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="?attr/colorSecondary"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.SunMoon.TitleMedium"
        android:text="@string/no_task_in_unplanned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="?attr/colorSecondary"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.SunMoon.TitleMedium"
        android:text="@string/click_add_to_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>