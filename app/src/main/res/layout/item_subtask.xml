<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="?attr/colorSurface"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/fragment_item_subtask_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/selector_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:useMaterialThemeColors="false" />

    <EditText
        android:inputType="textNoSuggestions"
        android:id="@+id/item_nested_title"
        android:layout_width="0dp"
        style="@style/Theme.SunMoon.EditText"
        android:layout_height="match_parent"
        android:hint="@string/add_sub_task"
        android:textAlignment="textStart"
        android:textColorHint="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/fragment_item_subtask_cb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_item_subtask_cb"
        app:layout_constraintTop_toTopOf="@id/fragment_item_subtask_cb" />

</androidx.constraintlayout.widget.ConstraintLayout>